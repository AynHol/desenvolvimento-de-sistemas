generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id
  text      String
  completed Boolean
  createdAt DateTime
  updatedAr DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@map("tasks")
}

model Tag {
  id        String   @id
  name      String   @unique
  createdAt DateTime
  updatedAt DateTime @updatedAt

  @@map("tags")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  birthDate DateTime
  createdAt DateTime
  updatedAt DateTime @updatedAt
  Task      Task[]

  @@map("users")
}
